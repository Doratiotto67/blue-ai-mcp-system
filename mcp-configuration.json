{
  "$schema": "./schema/mcp-configuration.schema.json",
  "mcp_configuration": {
    "docker_settings": {
      "host": "localhost",
      "port": 2376,
      "api_version": "1.45",
      "tls_verification": true,
      "cert_path": "C\\\\Users\\\\dorat\\\\.docker\\\\certs",
      "container_labels": {
        "mcp.system": "blue-ai-enterprise",
        "mcp.version": "1.0.0",
        "mcp.environment": "production"
      },
      "exposed_ports": [
        "9080:8080",
        "9081:8080",
        "9082:8080",
        "9083:8080",
        "9084:8080",
        "9085:8080"
      ],
      "env": {
        "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
        "GOOGLE_API_KEY": "${GOOGLE_API_KEY}"
      },
      "volumes": {
        "mcp_data": "/var/lib/mcp"
      },
      "restart_policy": {
        "Name": "unless-stopped",
        "MaximumRetryCount": 5
      }
    },
    "protocols_supported": ["http", "https"],
    "agent_connections": [
      {
        "agent_id": "blue-orchestrator",
        "endpoint": "http://localhost:9080/mcp",
        "endpoint_https": "https://localhost:9080/mcp",
        "protocols": ["http", "https"],
        "auth_type": "bearer_token",
        "credentials": {
          "username": "orchestrator_service",
          "password": "${ORCHESTRATOR_PASSWORD}",
          "token": "${ORCHESTRATOR_TOKEN}"
        },
        "health_check": {
          "endpoint": "http://localhost:9080/health",
          "interval": 30,
          "timeout": 5,
          "retry_attempts": 3
        },
        "reconnect": {
          "enabled": true,
          "max_attempts": 5,
          "initial_backoff_ms": 500,
          "max_backoff_ms": 10000
        }
      },
      {
        "agent_id": "architect-agent",
        "endpoint": "http://localhost:9081/mcp",
        "endpoint_https": "https://localhost:9081/mcp",
        "protocols": ["http", "https"],
        "auth_type": "bearer_token",
