        },
        "reconnect": {
          "enabled": true,
          "max_attempts": 5,
          "initial_backoff_ms": 500,
          "max_backoff_ms": 10000
        }
      },
      {
        "agent_id": "auditor-agent",
        "endpoint": "http://localhost:9084/mcp",
        "endpoint_https": "https://localhost:9084/mcp",
        "protocols": ["http", "https"],
        "auth_type": "bearer_token",
        "credentials": {
          "username": "auditor_service",
          "password": "${AUDITOR_PASSWORD}",
          "token": "${AUDITOR_TOKEN}"
        },
        "health_check": {
          "endpoint": "http://localhost:9084/health",
          "interval": 30,
          "timeout": 5,
          "retry_attempts": 3
        },
        "reconnect": {
          "enabled": true,
          "max_attempts": 5,
          "initial_backoff_ms": 500,
          "max_backoff_ms": 10000
        }
      },
      {
        "agent_id": "stack-research-agent",
        "endpoint": "http://localhost:9085/mcp",
        "endpoint_https": "https://localhost:9085/mcp",
        "protocols": ["http", "https"],
        "auth_type": "bearer_token",
        "credentials": {
          "username": "research_service",
          "password": "${RESEARCH_PASSWORD}",
          "token": "${RESEARCH_TOKEN}"
        },
        "health_check": {
          "endpoint": "http://localhost:9085/health",
          "interval": 30,
          "timeout": 5,
          "retry_attempts": 3
        },
        "reconnect": {
          "enabled": true,
          "max_attempts": 5,
          "initial_backoff_ms": 500,
          "max_backoff_ms": 10000
        }
      }
    ],
    "backend_integration": {
      "api_base_url": "http://localhost:9080",
      "auth_token": "",
      "sync_interval": 60,
      "timeout": 30000,
      "retry_policy": {
        "max_attempts": 3,
        "backoff_multiplier": 2,
        "initial_delay": 1000
      },
      "endpoints": {
        "health": "/health",
        "agents": "/api/agents",
        "workflows": "/api/workflows",
        "tasks": "/api/tasks",
        "metrics": "/api/metrics"
      }
    },
    "security": {
      "encryption": {
        "algorithm": "AES-256-GCM",
        "key_rotation_interval": 86400,
        "secure_key_storage": true
      },
      "network": {
        "enable_https": true,
        "certificate_validation": true,
        "allowed_origins": [
          "http://localhost:9080",
          "http://localhost:9081",
          "http://localhost:9082",
          "http://localhost:9083",
          "http://localhost:9084",
          "http://localhost:9085",
          "https://localhost:9080",
          "https://localhost:9081",
          "https://localhost:9082",
          "https://localhost:9083",
          "https://localhost:9084",
          "https://localhost:9085"
        ]
      },
      "authentication": {
        "token_expiry": 3600,
        "refresh_token_expiry": 604800,
        "max_failed_attempts": 5,
        "lockout_duration": 900
      }
    },
    "logging": {
      "level": "INFO",
      "format": "json",
      "output": "stdout",
      "rotation": {
        "enabled": true,
        "max_size": "100MB",
        "max_files": 10,
        "compress": true
      },
      "sensitive_fields": [
        "password",
        "token",
        "secret",
        "key"
      ]
    },
    "performance": {
      "max_concurrent_requests": 100,
      "request_timeout": 30000,
      "connection_pool_size": 50,
      "rate_limiting": {
        "enabled": true,
        "requests_per_minute": 60,
        "burst_allowance": 10
      },
      "caching": {
        "enabled": true,
        "ttl": 300,
        "max_size": "1GB"
      }
    },
    "resilience": {
      "circuit_breaker": {
        "enabled": true,
        "failure_threshold": 5,
        "recovery_timeout": 60,
        "half_open_max_calls": 3
      },
      "bulkhead": {
        "enabled": true,
        "max_concurrent_calls": 25,
        "max_wait_duration": 1000
      },
      "retry": {
        "enabled": true,
        "max_attempts": 3,
        "wait_duration": 1000,
        "retry_exceptions": [
          "NetworkException",
          "TimeoutException"
        ]
      }
    }
  },
  "metadata": {
    "version": "1.0.0",
    "environment": "production",
    "last_updated": "2025-11-16T00:00:00Z",
    "maintainer": "DevOps Team",
    "documentation": "https://docs.blue-ai.enterprise/mcp",
    "support": "support@blue-ai.enterprise"
  }
}